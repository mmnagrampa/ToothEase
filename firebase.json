{
  "hosting": {
    "public": "ToothEase",
    "header": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "geolocation=(self), microphone=()"
          }
        ]
      }
    ],
    "rewrite": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
